{
  "name": "psychmem",
  "version": "1.0.2",
  "description": "Psych-grounded selective memory system for AI agents with STM/LTM consolidation, decay curves, and learned importance weights",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "psychmem": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./plugin": {
      "import": "./plugin.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./retrieval": {
      "types": "./dist/retrieval/index.d.ts",
      "import": "./dist/retrieval/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./adapters/types": {
      "types": "./dist/adapters/types.d.ts",
      "import": "./dist/adapters/types.js"
    },
    "./adapters/opencode": {
      "types": "./dist/adapters/opencode/index.d.ts",
      "import": "./dist/adapters/opencode/index.js"
    },
    "./adapters/claude-code": {
      "types": "./dist/adapters/claude-code/index.d.ts",
      "import": "./dist/adapters/claude-code/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test dist/**/*.test.js",
    "start": "node dist/cli.js"
  },
  "keywords": [
    "ai-memory",
    "selective-memory",
    "psychology",
    "cognitive-architecture",
    "agent-memory",
    "claude-code",
    "opencode"
  ],
  "author": "muratg98",
  "license": "MIT",
  "files": [
    "dist",
    "hooks",
    "plugin.js",
    "plugin.json",
    "README.md"
  ],
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": true
    }
  }
}
