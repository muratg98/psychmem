{
	"description": "PsychMem - Psych-grounded selective memory system for AI agents",
	"hooks": {
		"SessionStart": [
			{
				"matcher": "startup|resume|clear|compact",
				"hooks": [
					{
						"type": "command",
						"command": "node \"${CLAUDE_PLUGIN_ROOT}/dist/cli.js\" hook --agent claude-code",
						"timeout": 10,
						"statusMessage": "Loading memories..."
					}
				]
			}
		],
		"UserPromptSubmit": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "node \"${CLAUDE_PLUGIN_ROOT}/dist/cli.js\" hook --agent claude-code",
						"timeout": 5,
						"async": true
					}
				]
			}
		],
		"PostToolUse": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "node \"${CLAUDE_PLUGIN_ROOT}/dist/cli.js\" hook --agent claude-code",
						"timeout": 5,
						"async": true
					}
				]
			}
		],
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "node \"${CLAUDE_PLUGIN_ROOT}/dist/cli.js\" hook --agent claude-code",
						"timeout": 30,
						"statusMessage": "Processing memories..."
					}
				]
			}
		],
		"SessionEnd": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "node \"${CLAUDE_PLUGIN_ROOT}/dist/cli.js\" hook --agent claude-code",
						"timeout": 15,
						"statusMessage": "Consolidating memories..."
					}
				]
			}
		]
	}
}
